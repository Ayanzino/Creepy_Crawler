{
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "indent": ["error", 4],
        "react": ["error", 4],
        "jsxIndent": ["error", 4],
        "no-alert": "off",
        "spaced-comment": ["error", "always", { "markers": ["$", "*", "?", "!"] }]
    },
    "globals": {
        "alert": false,
        "fetch": false
    }
}
